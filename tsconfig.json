{
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2017",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["./"]
}
